            //else
                if ($('.kangaroo-slide').hasClass('swiper-slide-active')) {
                 $('.new-index-comments .cursor-pointer').attr('src', '/Content/images/newindex/kangaroo-image.png');
                //$('.new-index-comments .cursor-pointer').attr('src', '/Content/images/newindex/gento-image.png');
            }
            else {
                $('.new-index-comments .cursor-pointer').attr('src', '/Content/images/newindex/gento-image.png');
