                        display: inline-block;
                        height: 35px;
                        background-image: url('/Content/images/img-more/daigou_icon1.png');
                        background-repeat: no-repeat;
                        background-position-y: 0px;
                        margin-bottom: 10px;
                    }

        .daigou-banner {
            margin-top: 3px;
            min-width: 1280px;
            height: 412px;
            box-sizing: border-box;
            background-image: url('/Content/images/img-more/daigou_banner.png');
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover;
        }

        .daigou-banner-box {
            width: 1280px;
            padding-top: 64px;
            box-sizing: border-box;
            margin: auto;
            height: 100%;
            text-align: center;
        }

            .daigou-banner-box h1 {
                font-size: 36px;
                color: white;
                text-shadow: 0 3px 5px #999999;
            }

            .daigou-banner-box h2 {
