                color: white;
                margin-top: 29px;
                margin-bottom: 17px;
            }

            .daigou-banner-box form input[type="text"] {
                width: 615px;
                height: 48px;
                display: inline-block;
                padding-left: 14px;
                box-sizing: border-box;
                border: none;
                outline: none;
            }

            .daigou-banner-box form input[type="submit"] {
                width: 113px;
                height: 48px;
                color: white;
                outline: none;
                border: none;
                background-color: #fd7f00;
                display: inline-block;
                box-sizing: border-box;
                cursor: pointer;
                font-size: 14px;
                font-weight: bold;
            }

            .daigou-banner-box form {
                display: inline-block;
                border: 6px solid rgba(0,0,0,0.1);
                border-radius: 5px;
            }

            .daigou-banner-box p {
                font-size: 14px;
                color: white;
                margin-top: 14px;
                margin-bottom: 22px;
            }

                .daigou-banner-box p a {
                    font-size: 14px;
                    color: white;
                    text-decoration: underline;
                    margin-left: 17px;
                }

            .daigou-banner-box > a {
                display: inline-block;
                width: 220px;
                font-size: 14px;
                color: white;
                border-radius: 5px;
                text-align: center;
                padding: 12px 0;
            }

                .daigou-banner-box > a:first-of-type {
                    background-color: #dd2727;
                }

                .daigou-banner-box > a:last-of-type {
                    background-color: #c19494;
                    margin-left: 23px;
                }

         
        .how-daigou-box-top {
            background-color: white;
            margin-bottom: 20px;
        }

        .daigou-how {
            width: 1280px;
            margin: auto;
            margin-top: 100px;
            padding-bottom: 70px;
            border-top: 2px solid #EDEDEE;
        }

        .daigou-riping {
            min-width: 1280px;
            box-sizing: border-box;
            background-color: #f8f8f8;
            padding: 60px 0;
        }

        .daigou-riping-box {
            width: 1280px;
            margin: auto;
            text-align: center;
            box-sizing: border-box;
        }
    </style>
}
