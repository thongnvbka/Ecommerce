<div id="PotentialCustomerDetail" class="modal fade modal-dialog modal-p70" role="dialog">
    <div class="modal-header">
        <button type="button" class="close text-center" data-dismiss="modal">&times;</button>
        <h4 data-bind="text: titleCustomer" class="modal-title"></h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <!-- /.col -->
            <div class="col-xs-5">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="/Content/dist/img/user2-160x160.jpg" alt="User profile picture">
                        <h3 class="profile-username text-center" data-bind="text: potentialCustomerModel().FullName"></h3>
                        <p class="text-muted text-center"><span class="label label-danger" data-bind="text: potentialCustomerModel().LevelName"></span></p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Customer ID :</b> <a class="pull-right" data-bind="text:  potentialCustomerModel().Code()"></a>
                            </li>
                            <li class="list-group-item">
                                <b> Email</b> <a class="pull-right" data-bind="text: potentialCustomerModel().Email"></a>
                            </li>
                            <li class="list-group-item">
                                <b> Phone:</b> <a class="pull-right" data-bind="text: potentialCustomerModel().Phone"></a>
                            </li>
                            <li class="list-group-item">
                                <b>Address :</b> <a class="pull-right" data-bind="text: potentialCustomerModel().Address"> </a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.box-body -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Sales staff in charge</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Staff: </label>
                                    <div class="col-sm-9">
                                        <input min="1" data-bind="value: potentialCustomerModel().UserFullName" type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xs-7">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Detail info potential customers</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" id="addCustomer">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Select System:</label>
                                <div class="col-sm-9">
                                    <input min="1" data-bind="value: potentialCustomerModel().SystemName" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Nickname:</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        <input data-bind="value: potentialCustomerModel().Nickname" type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label" email>Email:</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-envelope"></i>
                                        </div>
                                        <input data-bind="value: potentialCustomerModel().Email" type="email" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Full name :</label>
                                <div class="col-sm-9">
                                    <input data-bind="value: potentialCustomerModel().FullName" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Birthday: </label>
                                <div class="col-sm-9">
                                    <input disabled data-bind="value: potentialCustomerModel().Birthday" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Sex:</label>
                                <div class="col-sm-9">
                                    <input data-bind="value: potentialCustomerModel().GenderName" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Phone</label>
                                <div class="col-sm-9">
                                    <input min="1" data-bind="value: potentialCustomerModel().Phone" type="number" class="form-control" disabled>
                                </div>
                            </div>
                            @*<div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Province/ City:</label>
                                <div class="col-sm-9">
                                    <input min="1" data-bind="value: potentialCustomerModel().ProvinceName" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Trousers/District:</label>
                                <div class="col-sm-9">
                                    <input min="1" data-bind="value: potentialCustomerModel().DistrictName" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Village/ Phoenix:</label>
                                <div class="col-sm-9">
                                    <input min="1" data-bind="value: potentialCustomerModel().WardsName" type="text" class="form-control" disabled>
                                   
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Address :</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="4" data-bind="text: potentialCustomerModel().Address" type="text" disabled></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
    <div class="modal-footer">
        <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</a>
    </div>
            
</div>
