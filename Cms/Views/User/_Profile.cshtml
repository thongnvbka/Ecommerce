@model ChangePasswordMeta

<form data-bind="submit: save" id="changePasswordForm" class="form-horizontal">
    <div class="form-group">
        @Html.AntiForgeryToken()
        <label for="OldPassword" class="col-sm-2 control-label">Current password<span class="color-red">*</span></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.OldPassword, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"data-bind", "value: oldPassword"},
                {"Type", "Password" }
            })
            @Html.ValidationMessageFor(x => x.OldPassword)
        </div>
    </div>
    <div class="form-group">
        <label for="NewPassword" class="col-sm-2 control-label">New password <span class="color-red">*</span></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.NewPassword, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"data-bind", "value: newPassword" },
                {"Type", "Password" }
            })
            @Html.ValidationMessageFor(x => x.NewPassword)
        </div>
    </div>
    <div class="form-group">
        <label for="ReNewPassword" class="col-sm-2 control-label">Enter new password <span class="color-red">*</span></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.ReNewPassword, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"data-bind", "value: reNewPassword" },
                {"Type", "Password" }
            })
            @Html.ValidationMessageFor(x => x.ReNewPassword)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button data-bind="disable: isLoading" type="submit" class="btn btn-primary"><i data-bind="attr: {class: isLoading() ? 'fa fa-spinner fa-pulse' : 'fa fa-save'}"></i> Change password</button>
        </div>
    </div>
</form>