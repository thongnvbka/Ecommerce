<header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>Pr</b>V</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">Project<b>V</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button" id="offcanvas">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-custom-menu">
            @if (TitleConcurrents.Count > 1)
            {
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">Title Name - Office Name <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var title in TitleConcurrents)
                            {
                                <li class="@(UserState.OfficeId == title.OfficeId && UserState.TitleId == title.TitleId ? "active":"")"><a href="@Url.Action("ChangeTitleConcurent", "User", new {Id = title.Id})">Title Name - Office Name</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            }
            
            <ul id="notifications" class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a data-bind="click: ShowAllNotification.bind($data, 0)" href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-envelope-o"></i>
                        <span data-bind="text: totalMessageUnRead, visible: totalMessageUnRead() > 0" class="label label-success"></span>
                    </a>
                </li>
                <!-- Notifications: style can be found in dropdown.less -->
                <li class="dropdown notifications-menu">
                    <a data-bind="click: ShowListUnReadNotify" href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>
                        <span data-bind="text: totalNotifySystemUnRead, visible: totalNotifySystemUnRead() > 0" class="label label-warning"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li data-bind="text: 'You have ' + totalNotifySystemUnRead() + ' notification'" class="header"></li>
                        <li>
                            <!-- inner menu: contains the actual data -->
                            <ul data-bind="foreach: listNotify" class="menu">
                                <li data-bind="click: $parent.detailNotify.bind($data,$data)">
                                    <a data-bind="attr: { title: Title }" href="javascript:;">
                                        <span data-bind="attr: { class: Type == 0 ? 'label label-warning notification-label mr5' : 'label label-success notification-label mr5' }">
                                            <i data-bind="attr: { class: Type == 0 ? 'clip-warning' : 'clip-info-2' }"></i>
                                        </span>
                                        <span class="message" data-bind="text: Title"></span>
                                        <span class="time fromnow" data-bind="text: FromNow"></span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="footer"><a data-bind="click: ShowAllNotification.bind($data, 1)" href="javascript:;">All </a></li>
                    </ul>
                </li>
