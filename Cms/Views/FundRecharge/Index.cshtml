@{
    ViewBag.Title = "Load / Subtract Funds";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Load / Subtract Funds
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> View statistics loaded with deductions</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-primary">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-warning"></i> Warning !</h4>
            It is necessary to check and accurately determine the information in the process of charging / deducting money into the customer's wallet.
        </div>
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="row">
                    <section class="col-md-3 form-group">
                          <label for="ddlGroup">Keyword search </label>
                        <i class="fa fa-question-circle tooltips big-tooltip" data-toggle="tooltip" data-placement="right" title="" data-original-title="You can do a search by Account Code, Account name, Fullname, Phone, Email,.. of customer."></i>
                        <input class="form-control" id="SearchInfo_Keyword" name="SearchInfo.Keyword" placeholder="Account code, Account name, Fullname, Phone, Email..." type="text" value="">
                    </section>
                    <section class="col-md-3 form-group">
                        <label for="ddlWarehouse">Select System</label>
                        <select class="form-control select-view" id="ddlWarehouse" style="width: 100%;">
                            <option value="1" selected="selected">- All-</option>
                            <option value="2">nhaphangtrungquoc.com</option>
                            <option value="4">orderhangkinhdoanh.com</option>
                            <option value="7">timnguonhanggiare.com</option>
                        </select>
                    </section>
                    <section class="col-md-2 form-group">
                        <label for="ddlPage">Account type</label>
                        <select class="form-control select-view" id="ddlPage" style="width: 100%;">
                            <option value="10" selected="selected">- All-</option>
                            <option value="25">VIP 0</option>
                            <option value="50">VIP 1</option>
                            <option value="150">VIP 2</option>
                            <option value="200">VIP 3</option>
                            <option value="300">VIP 4</option>
                            <option value="400">VIP 5</option>
                        </select>
                    </section>
                    <section class="col-md-2 form-group">
                        <label for="ddlPage">Status</label>
                        <select class="form-control select-view" id="ddlPage" style="width: 100%;">
                            <option value="10" selected="selected">- All -</option>
                            <option value="25">Open</option>
                            <option value="50">Pause</option>
                            <option value="100">Cancel</option>
                        </select>
                    </section>
                    <section class="col-md-2 form-group">
                        <!-- Date and time range -->
                        <label>Registration date</label>
                        <div class="input-group">
                            <button type="button" class="btn btn-default pull-right" id="daterange-btn">
                                <span>
                                    <i class="fa fa-calendar"></i> Select the date the customer subscribes
                                </span>
                                <i class="fa fa-caret-down"></i>
                            </button>
                        </div>
                    </section>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-search"></i> Search</button>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </form>
    </div>

    <div class="row">
        <div class="col-xs-12" id="body-table">
            @Html.Partial("_List")
        </div>
        <!-- /.col -->
    </div>

</section>
<!-- /.content -->
