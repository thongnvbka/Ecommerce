@model  ModelView<Library.DbContext.Entities.Position, PositionFilterViewModel>

<div class="box">
    @*<div class="box-header">
            <h3 class="box-title">Hover Data Table</h3>
        </div>*@
    <!-- /.box-header -->
    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center w-40">#</th>
                        <th class="text-center w-350">Name of position</th>
                        <th class="text-center w-200">Created Date</th>
                        <th class="text-center w-80"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
            {
                        <tr>
                            <td colspan="3" class="text-center">There are no records</td>
                        </tr>
                    }
                    else
                    {
                        var idx = 1;
                        foreach (var m in Model.Items)
                        {
                            <tr>
                                <td class="text-center">@((Model.PageInfo.CurrentPage - 1) * Model.PageInfo.TotalRecord + idx)</td>
                                <td>@m.TitleName</td>
                                <td class="text-right">@m.Created.ToString("g")</td>
                                <td class="text-center">
                                    <a href="javascript:;" data-url="@Url.Action("Delete", new { titleId = m.TitleId, officeId = m.OfficeId })" data-name="@m.TitleName" class="btn btn-sm btn-danger delete-item"><i class="fa fa-times"></i> Delete  </a>
                                </td>
                            </tr>
                            idx += 1;
                        }
                    }
                </tbody>
            </table>
        </div>

        @Html.Partial("_Paging", Model.PageInfo)
    </div>
    <!-- /.box-body -->
</div>