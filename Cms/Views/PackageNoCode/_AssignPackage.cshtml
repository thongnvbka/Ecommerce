<div id="assignPackageModal" class="modal fade modal-dialog modal-p50" tabindex="-1" data-backdrop="static" role="dialog">
    <form data-bind="submit: save" id="assignPackageForm" class="form-horizontal">
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-9">
                    <h2 class="order-header">
                        <i class="fa fa-share"></i>
                        <span> package Labeling "<b data-bind="text: 'P' + packageCode()"></b>" FOR ORDER</span>
                    </h2>
                </div>
            </div>
            <!-- info row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="orderCode" class="col-sm-2 control-label">Enter an order <span class="color-red">*</span>:</label>
                        <div class="col-sm-10">
                            <suggetion-order-input-components params="value: { callback: chooseOrder}"></suggetion-order-input-components>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="transportCode" class="col-sm-2 control-label">Transport code  <span class="color-red">*</span>:</label>
                        <div class="col-sm-10">
                            <input data-bind="value: transportCode" type="text" class="form-control" id="transportCode" placeholder="Transport code">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="note" class="col-sm-2 control-label">Note</label>
                        <div class="col-sm-10">
                            <textarea data-bind="value: note" id="note" rows="5" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-bind="disable: isLoading" class="btn btn-success" type="submit"><i data-bind="attr: {class: isLoading() ? 'fa fa-spinner fa-pulse' : 'fa fa-save'}" class="fa fa-save"></i> 
            <span></span>Save</button>
            <a class="btn btn-default" data-dismiss="modal">Close</a>
        </div>
    </form>
</div>