@using (Html.BeginScriptBlock())
{
    <script id="packagesTemplate" type="text/template">
        <tr>
            <td data-bind="text: ($parent.currentPage()-1)* $parent.recordPerPage() + $index()+1" class="text-center"></td>
            <td>
                <ul class="tbl-list">
                    <li><i class="fa fa-cube"></i> <a data-bind="click: $parent.showDetail" href="javascript:;"><b data-bind="text: 'P' + code"></b></a></li>
                    <li><i class="fa fa fa-truck"></i> <span data-bind="text: transportCode"></span></li>
                </ul>

            </td>
            <td>
                <ul class="tbl-list">
                    <li>
                        <a data-bind="click: function() {orderTypeViewModel.showViewOrder(orderId, orderCode); }" href="javascript:;"><b data-bind="text: ReturnCode(orderCode)"></b></a>
                    </li>
                    <li><span data-bind="text: customerName"></span></li>
                    <li><span data-bind="text: customerUserName"></span></li>
                </ul>
            </td>
            <td>
                <ul class="tbl-list">
                    <li><i class="fa fa-user"></i> <a data-bind="attr: {title: createUserName}" href="javascript:;"><b data-bind="text: createUserFullName"></b></a></li>
                    <li><i class="fa fa-home"></i> <span data-bind="text: createOfficeName"></span></li>
                </ul>
            </td>
            <td><span data-bind="text: packageNoCodeCreatedTextNow, attr: {title: packageNoCodeCreatedText}"></span></td>
            @if (isOrder)
            {
                <td>
                    <span data-bind="text: packageNoCodeNote" class="color-red"></span>
                </td>
                <td>
                    <span data-bind="editable: note, editableOptions: {name: 'note', pk: id, url: '', type: 'textarea', showbuttons: false, mode: 'inline', autotext: 'never', onblur: 'submit', emptytext: 'Not noted'}"></span>
                </td>

            }
            else if (isWarehouse)
            {
                <td>
                    <span data-bind="editable: packageNoCodeNote, editableOptions: {name: 'note', pk: id, url: '', type: 'textarea', showbuttons: false, mode: 'inline', autotext: 'never', onblur: 'submit', emptytext: 'Not noted'}"></span>
                </td>
                <td>
                    <span data-bind="text: note" class="color-red"></span>
                </td>
            }
            <td>
                <a data-bind="attr: {title: updateUserName}" href="javascript:;"><b data-bind="text: updateUserFullName"></b></a>
                <!-- ko if: packageNoCodeStatus != 0 -->
                <br />
                <span data-bind="text: packageNoCodeUpdatedTextNow, attr: {title: packageNoCodeUpdatedText}"></span>
                <!-- /ko -->
            </td>
            <td class="text-center">
                <span data-bind="text: statusText, attr: {class: statusClass}"></span>
            </td>
            <td class="text-center">
                <a data-bind="click: $parent.comment, attr: {class: packageNoCodeCommentNo() > 0 ? 'btn btn-warning' : 'btn btn-success'}" class="btn btn-success" href="javascript:;"><i class="fa fa-comments"></i></a>
            </td>
            @if (UserState.OfficeType == (byte)OfficeType.Order
                    || UserState.OfficeType == (byte)OfficeType.Deposit)
            {
                <td>
                    <button data-bind="click: $parent.approvelAssignPackage, enable: packageNoCodeStatus == 0" class="btn btn-primary" title="Confirm"><i class="fa fa-check"></i></button>
                </td>
            }
            <td>
                <button data-bind="click: $parent.showAddForOrder, enable: packageNoCodeStatus == 0" class="btn btn-primary" title="Gán cho Orders"><i class="fa fa-share"></i></button>
            </td>
            <td>
                <button data-bind="click: $parent.remove, enable: packageNoCodeStatus == 0" class="btn btn-danger" title="Delete "><i class="fa fa-times"></i></button>
            </td>
        </tr>
    </script>
}