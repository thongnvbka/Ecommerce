
@model AccountantSubjectMeta
@{
    ViewBag.Title = "Add new accounting subject";
}
<section class="content-header">
    <h1>
        Add new subject
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("Type")">@*Danh sách đối tượng kế toán*@List of accounting subjects</a></li>
        <li class="active">Add new subject</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <form action="@Url.Action("CreateSubject")" method="post" class="form-horizontal" id="submitForm">
            @Html.AntiForgeryToken()
            <div class="box-body">
                @Html.Partial("_UpdateSubject", Model)
            </div>
            <div class="box-footer">
                <a href="@Url.Action("AccountantSubject")" role="button" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to list</a>
                <button type="button" class="btn btn-info pull-right" onclick="submitForm()"><i class="fa fa-plus"></i> Add accounting object </button>
            </div>
        </form>
    </div>
</section>

@using (Html.BeginScriptBlock())
{
    <script type="text/javascript">
        $(document).ready(function () {
            @if (TempData["Msg"] != null) {
                <text>toastr.success('@Html.Raw(TempData["Msg"])');</text>
            }
        })
    </script>
}
<!-- /.content -->
