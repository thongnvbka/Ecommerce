@{
    var approved = (byte)RechargeBillStatus.Approved;
}
<div id="rechargeAddOrEditPlus" class="modal fade modal-dialog modal-p50" role="dialog">
    <div class="modal-body">
        <section class="importwarehouse">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2 class="page-header">
                        <strong>CREATE E-WALLET MONEY ADDING</strong>
                        @*<span class="impornumber">Số phiếu: <strong></strong></span>
                            <small data-bind="text: 'Date of implementation: ' + rechargeBillModel().Created"></small>*@
                    </h2>
                </div>
            </div>
            <!-- info row -->
            <div class="row">
                <div class="col-xs-6">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Customer information<span class="color-red">(*)</span></h3>
                        </div>
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <!-- ko if: AddOrEdit() == 0 -->
                                        <div class="input-group row">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <select data-bind="value: rechargeBillModel().CustomerId" class="form-control customer-search customer-recharge-bill-model" style="width: 100%;"></select>
                                        </div>
                                        <!-- /ko -->
                                    </div>
                                    <!-- ko if: rechargeBillModel().CustomerCode != null -->
                                    <div class="col-sm-12">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <th>Customer ID :</th>
                                                        <td data-bind="text: rechargeBillModel().CustomerCode"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Full name:</th>
                                                        <td data-bind="text: rechargeBillModel().CustomerName"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Phone:</th>
                                                        <td data-bind="text: rechargeBillModel().CustomerPhone"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Email:</th>
                                                        <td data-bind="text: rechargeBillModel().CustomerEmail"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!-- /ko -->
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Choose entry <span class="color-red">(*)</span></h3>
                        </div>
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-usd"></i>
                                            </div>
                                            <div id="treasureWallet_addtree"></div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <th>Entry name:</th>
                                                        <td data-bind="text: rechargeBillModel().TreasureName"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-danger">
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                   
                                    <label for="inputPassword3" class="col-sm-2 control-label text-red text-bold">Amount added: <span class="color-red">(*)</span></label>
                                  

                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-money"></i>
                                            </div>
                                            <!-- ko if: rechargeBillModel().Status() == @approved -->
                                            <input type="text" class="form-control decimalCN" data-bind="value: rechargeBillModel().CurrencyFluctuations" disabled>
                                            <!-- /ko -->
                                            <!-- ko ifnot: rechargeBillModel().Status() == @approved -->
                                            <input type="text" class="form-control decimalCN" data-bind="value: rechargeBillModel().CurrencyFluctuations">
                                            <!-- /ko -->
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Note:</label>
                                    <div class="col-sm-10">
                                        <!-- ko if: rechargeBillModel().Status() == @approved -->
                                        <textarea class="col-sm-9 form-control" rows="4" placeholder="Remittance note ..." data-bind="value: rechargeBillModel().Note" disabled></textarea>
                                        <!-- /ko -->
                                        <!-- ko ifnot: rechargeBillModel().Status() == @approved -->
                                        <textarea class="col-sm-9 form-control" rows="4" placeholder="Remittance note ..." data-bind="value: rechargeBillModel().Note"></textarea>
                                        <!-- /ko -->
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.col -->
            </div>
        </section>
    </div>
    <div class="modal-footer">
        <a class="btn btn-danger" data-bind="click: btnCreateOrEditRechargeBill" href="javascript:;"><i class="fa fa-check"></i> Confirm</a>
        <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i>Close</a>
    </div>
</div>

