<div id="orderAssignedModal" class="modal fade modal-dialog modal-p40" tabindex="-1" role="dialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-danger"><b>Order split: <span data-bind="text: assignedCode()"></span></b></h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label">Select the order processing staff</label>
            <select class="form-control select-view" style="width: 100%;" data-bind="options: listUserOffice, optionsText: 'UserFullNameOffice', optionsValue: 'Id', value: assignedUserId"></select>
        </div>
    </div>
    <div class="modal-footer">
        <button data-bind="click: submitAssignedOrder, enable: isSubmit" type="button" class="btn btn-primary">
            <!-- ko if: isSubmit()-->
            <i class="fa fa-check"></i>
            <!-- /ko -->
            <!-- ko if: !isSubmit()-->
            <i class="fa fa-spinner fa-pulse fa-fw"></i>
            <!-- /ko -->
            Confirm
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>
