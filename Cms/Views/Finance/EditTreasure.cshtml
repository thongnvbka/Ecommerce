@model TreasureMeta
@{
    ViewBag.Title = string.Format("Update fund information \"{0}\"", Model.Name);
}
<script>
    var treasureJsTree = @Html.Raw(ViewBag.treasureJsTree);
</script>
<section class="content-header">
    <h1>
        Update the balance sheet
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("AccountingRegulations")">List of accounts payable</a></li>
        <li class="active">Update statement</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <form action="@Url.Action("EditTreasure")" method="post" class="form-horizontal" id="submitForm">
            @Html.AntiForgeryToken()
            <div class="box-body">
                @Html.Partial("_UpdateTreasure", Model)
            </div>
            <div class="box-footer">
                <a href="@Url.Action("AccountingRegulations")" role="button" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to list</a>
                <button type="button" class="btn btn-info pull-right" onclick="submitForm()"><i class="fa fa-plus"></i> Update</button>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->
