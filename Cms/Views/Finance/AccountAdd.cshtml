
@{
    ViewBag.Title = "Add new bank account";
}

<section class="content-header">
    <h1>
        Fund management
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Account","Finance")">Manage bank accounts</a></li>
        <li class="active">Add new bank account</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="">
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">

            <div class="box-body">
                <div class="row">
                    <div class="box box-primary col-md-6" style="width: 50%;">
                        <div class="box-header with-border">
                            <h3 class="box-title">Account information</h3>
                        </div>
                        <div class="box-body">
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Account name</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Account number</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Phone</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Note</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtFullName">Status</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" id="rdoSex" name="rdoSex" /> Activity
                                    </label>
                                </div>
                            </section>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="box box-primary col-md-6" style="width: 50%;">
                        <div class="box-header with-border">
                            <h3 class="box-title">Representative information</h3>
                        </div>
                        <div class="box-body">
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">First and last name</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Identity card / Passport</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Phone</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Email</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                            <section class="col-md-12 form-group">
                                <label for="txtEmail">Address</label>
                                <input type="text" class="form-control" id="txtName" placeholder="Email">
                            </section>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Account","Finance")" class="btn btn-default">Back to list</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</section>
