                                                <label class="col-sm-3 control-label">Width<span class="color-red">*</span>:</label>
                                                <div class="col-sm-3">
                                                    @Html.TextBoxFor(x => x.Width, new Dictionary<string, object>()
                                                    {
                                                        {"class", "form-control decimal"},
                                                        {"data-bind", "value: width"}
                                                    })
