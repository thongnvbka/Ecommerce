                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Height (cm) <span class="color-red">*</span>:</label>
                                                <div class="col-sm-3">
                                                    @Html.TextBoxFor(x => x.Height, new Dictionary<string, object>()
