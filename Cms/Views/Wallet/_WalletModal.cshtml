                                                </div>
                                                <label class="col-sm-3 control-label">Length<span class="color-red">*</span>:</label>
                                                <div class="col-sm-3">
                                                    @Html.TextBoxFor(x => x.Length, new Dictionary<string, object>()
                                                    {
                                                        {"class", "form-control decimal"},
                                                        {"data-bind", "value: length"}
                                                    })
