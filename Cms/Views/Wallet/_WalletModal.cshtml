                        <!-- ko ifnot: id() > 0 -->
                        <span data-bind="text: mode() == 0 ? 'Create package' : 'CREATE WOODEN PACKAGE'"></span>
                        <!-- /ko -->
                    </h2>
                </div>
                <div class="col-xs-3">
                    <h2 class="order-header">
